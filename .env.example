# Application
DEBUG=false
APP_NAME=Space Dashboard API

# Database
DATABASE_URL=postgresql+asyncpg://space:space_secret@localhost:5432/space_dashboard

# NASA API Key (get from https://api.nasa.gov/)
NASA_API_KEY=DEMO_KEY

# JWST API (get from https://api.jwstapi.com/)
JWST_API_KEY=

# AstronomyAPI (get from https://astronomyapi.com/)
ASTRONOMY_API_ID=
ASTRONOMY_API_SECRET=

# ISS Settings
ISS_POLL_INTERVAL_SECONDS=120
ISS_FRESHNESS_MINUTES=10
ISS_RETENTION_DAYS=14

# OSDR Settings
OSDR_POLL_INTERVAL_SECONDS=600

# Cache TTLs (hours)
CACHE_TTL_SHORT_HOURS=6
CACHE_TTL_LONG_HOURS=24

# HTTP Client
HTTP_TIMEOUT_SECONDS=30
HTTP_MAX_RETRIES=3
